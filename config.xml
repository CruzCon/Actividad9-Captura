<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.camera1" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <preference name="phonegap-version" value="cli-9.0.0" />
  <name>Captura de video PhoneGap
</name>
  <description>
      Esta es una app de PhoneGap.
  </description>
  <author  href="http://cordova.io">
    
      Cruz Contreras Carranza
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-dialogs"/>
  <plugin name="cordova-plugin-device"/>
  <plugin name="cordova-plugin-device-motion"/>
  <plugin name="cordova-plugin-device-camera"/>
   <plugin name="cordova-plugin-media-capture"/>
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
      <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>
</widget>
